<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@color/cardview_shadow_end_color"
        android:layout_margin="@dimen/text_margin"
        android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="center"
                      android:orientation="vertical">
            <TextView
                    android:id="@+id/team_one"
                    android:layout_width="wrap_content"
                    android:text="Team 1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_margin"
                    android:layout_marginLeft="@dimen/text_margin"
                    android:layout_marginRight="@dimen/text_margin"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:text="vs"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_margin"
                    android:layout_marginLeft="@dimen/text_margin"
                    android:layout_marginRight="@dimen/text_margin"/>
            <TextView
                    android:id="@+id/team_two"
                    android:layout_width="wrap_content"
                    android:text="Team 2"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="center"
                      android:orientation="vertical">
            <TextView
                    android:id="@+id/content_Date"
                    android:layout_width="wrap_content"
                    android:text="Date: 10/12/2019"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_margin"/>

            <TextView
                    android:id="@+id/content_Time"
                    android:layout_width="wrap_content"
                    android:text="Begin: 10:30 - End: 12:30"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"/>
        </LinearLayout>
    </LinearLayout>
    <Button android:layout_width="50dp"
            android:id="@+id/btn_delete"
            android:drawableBottom="@drawable/ic_delete_black_24dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
    />
</androidx.cardview.widget.CardView>